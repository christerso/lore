{
  "mcpServers": {
    "obsidian": {
      "command": "python",
      "args": ["-m", "mcp_obsidian"],
      "env": {
        "OBSIDIAN_API_KEY": "your-api-key-here",
        "OBSIDIAN_HOST": "localhost",
        "OBSIDIAN_PORT": "27123"
      }
    },
    "obsidian-advanced": {
      "command": "python",
      "args": ["G:/repos/lore/scripts/advanced_obsidian_mcp.py"],
      "env": {
        "OBSIDIAN_API_KEY": "your-api-key-here",
        "OBSIDIAN_HOST": "localhost",
        "OBSIDIAN_PORT": "27123",
        "OBSIDIAN_DEBUG": "false",
        "OBSIDIAN_CACHE_SIZE": "1000",
        "OBSIDIAN_TIMEOUT": "30"
      }
    }
  },
  "allowedTools": [
    "Edit",
    "Read",
    "Write",
    "Glob",
    "Grep",
    "Bash",
    "BashOutput",
    "WebSearch",
    "WebFetch",
    "Task",
    "TodoWrite",
    "SlashCommand",
    "mcp__obsidian__*",
    "mcp__obsidian-advanced__*"
  ]
}