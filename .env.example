# Obsidian MCP Configuration
# Copy this file to .env and fill in your actual values

# Required Configuration
OBSIDIAN_API_KEY=your-generated-api-key-here
OBSIDIAN_HOST=localhost
OBSIDIAN_PORT=27123

# Optional Configuration
OBSIDIAN_VAULT_PATH=G:/path/to/your/obsidian/vault
OBSIDIAN_DEBUG=false
OBSIDIAN_CACHE_SIZE=1000
OBSIDIAN_TIMEOUT=30

# Feature Flags (for advanced server)
OBSIDIAN_ENABLE_TEMPLATES=true
OBSIDIAN_ENABLE_GRAPH=false
OBSIDIAN_ENABLE_DAILY_NOTES=true
OBSIDIAN_ENABLE_BACKLINKS=true
