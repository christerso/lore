# Save Files & Runtime Data
*.save binary
*.sav binary
*.dat binary

# Large files that shouldn't be diffed
*.pdf diff=astextplain
*.docx diff=astextplain
*.xlsx diff=astextplain

# Special handling for C++ files
*.cpp linguist-language=C++
*.hpp linguist-language=C++
*.h linguist-language=C++
*.cxx linguist-language=C++

# CMake files should be recognized as CMake
*.cmake linguist-language=CMake
CMakeLists.txt linguist-language=CMake

# Shader files should be recognized as GLSL/HLSL
*.vert linguist-language=GLSL
*.frag linguist-language=GLSL
*.geom linguist-language=GLSL
*.comp linguist-language=GLSL
*.glsl linguist-language=GLSL
*.hlsl linguist-language=HLSL

# Documentation files
*.md linguist-language=Markdown
*.markdown linguist-language=Markdown

# Configuration files
*.json linguist-language=JSON
*.yaml linguist-language=YAML
*.yml linguist-language=YAML
*.toml linguist-language=TOML
*.ini linguist-language=INI

# Scripts
*.py linguist-language=Python
*.sh linguist-language=Shell
*.bat linguist-language=Batch
*.ps1 linguist-language=PowerShell

# Detect export control violations
*.cpp export-control
*.hpp export-control
*.h export-control

# Security scanning
*.cpp security-scan
*.hpp security-scan
*.h security-scan

# Large file handling
*.png filter=lfs diff=lfs merge=lfs -text
*.jpg filter=lfs diff=lfs merge=lfs -text
*.jpeg filter=lfs diff=lfs merge=lfs -text
*.wav filter=lfs diff=lfs merge=lfs -text
*.mp3 filter=lfs diff=lfs merge=lfs -text
*.fbx filter=lfs diff=lfs merge=lfs -text
*.obj filter=lfs diff=lfs merge=lfs -text
*.gltf filter=lfs diff=lfs merge=lfs -text
*.glb filter=lfs diff=lfs merge=lfs -text

# Line ending overrides for specific tools
# VS Code settings
.vscode/* text eol=lf

# Sublime Text settings
sublime-* text eol=lf

# Ensure consistent line endings for all text files
# Force LF for cross-platform compatibility
# Windows batch files still use CRLF as specified above